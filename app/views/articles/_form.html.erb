<%= form_for(@article) do |f| %>
<div id="title">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div id="content">
  <%= f.label :content %>
  <%= f.text_area :content, size: "24x10" %>
</div>
  <%= f.submit %>
<% end %>
<% unless @article.new_record? %>
<%= link_to "Show | ", article_path(@article) %>
<% end %>
<%= link_to "Back", articles_path %>
